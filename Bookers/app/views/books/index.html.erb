<h1>Books</h1>
 
<table>
<tr>
  <th>Title</th>
  <th>Body</th> 
</tr>

<% @bookall.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td>Show</td>
    <td>Edit</td>
    <td><%= link_to "Delete", destroy_book_path(@book.id), method: :delete %></td>
  </tr>
<% end %>
</table>

<h3>New book</h3>
<%= form_with model:@book, local:true do |f| %>

<div class="submit_box">
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
</div>  
  <br><%= f.submit 'Create Book' %>

<% end %>